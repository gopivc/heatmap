{
    "packages":{
        "ophan-heatmap":{
            "type":"autoscaling",
            "data":{
                "bucket":"ophan-dist"
            }
        }
    },
    "recipes":{
        "default":{
            "depends" : ["artifactUploadOnly", "deployOnly"]
        },
        "deployOnly":{
            "actionsPerHost": ["heatmap.deploy"]
        },
        "artifactUploadOnly":{
            "actionsBeforeApp": ["heatmap.uploadArtifacts"]
        }
    }
}